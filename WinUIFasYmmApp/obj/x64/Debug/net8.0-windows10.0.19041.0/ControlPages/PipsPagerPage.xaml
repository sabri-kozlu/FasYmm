<Page x:ConnectionId='1'
    x:Class="WinUIFasYmmApp.ControlPages.PipsPagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIFasYmmApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <local:ControlExample x:ConnectionId='2' x:Name="Example1" HeaderText="PipsPager integrated with a FlipView">
            <local:ControlExample.Example>
                <StackPanel>
                    <FlipView x:ConnectionId='11' x:Name="Gallery" MaxWidth="400" Height="270"                                >
                        <FlipView.ItemTemplate>
                            <DataTemplate                      >
                                <Image x:ConnectionId='14'                               />
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>
                    <PipsPager x:ConnectionId='12' x:Name="FlipViewPipsPager"
                        HorizontalAlignment="Center"
                        Margin="0, 12, 0, 0"
                                                               
                                                                                             />
                </StackPanel>
            </local:ControlExample.Example>
            <local:ControlExample.Xaml>
                <x:String xml:space="preserve"> 
&lt;StackPanel&gt;
    &lt;FlipView x:Name="Gallery" MaxWidth="400" Height="270" ItemsSource="{x:Bind Pictures}"&gt;
        &lt;FlipView.ItemTemplate&gt;
            &lt;DataTemplate x:DataType="x:String"&gt;
                &lt;Image Source="{x:Bind Mode=OneTime}" /&gt;
            &lt;/DataTemplate&gt;
        &lt;/FlipView.ItemTemplate&gt;
    &lt;/FlipView&gt;
    &lt;PipsPager x:Name="FlipViewPipsPager"
        HorizontalAlignment="Center"
        Margin="0, 12, 0, 0"
        NumberOfPages="{x:Bind Pictures.Count}"
        SelectedPageIndex="{x:Bind Path=Gallery.SelectedIndex, Mode=TwoWay}" /&gt;
&lt;/StackPanel&gt;
                </x:String >
            </local:ControlExample.Xaml>
        </local:ControlExample>
        <local:ControlExample x:ConnectionId='3' x:Name="Example2" HeaderText="PipsPager with options to change its orientation and button visibility.">
            <local:ControlExample.Example>
                <PipsPager x:ConnectionId='4' x:Name="TestPipsPager2"/>
            </local:ControlExample.Example>
            <local:ControlExample.Options>
                <StackPanel>
                    <ComboBox x:ConnectionId='5' x:Name="OrientationComboBox" Header="Orientation"                                                         SelectedValue="Horizontal">
                        <x:String>Horizontal</x:String>
                        <x:String>Vertical</x:String>
                    </ComboBox>
                    <ComboBox x:ConnectionId='6' x:Name="PrevButtonComboBox" Header="Previous Button Visibility"                                                        SelectedValue="Visible">
                        <x:String>Visible</x:String>
                        <x:String>VisibleOnPointerOver</x:String>
                        <x:String>Collapsed</x:String>
                    </ComboBox>
                    <ComboBox x:ConnectionId='7' x:Name="NextButtonComboBox" Header="Next Button Visibility"                                                        SelectedValue="Visible">
                        <x:String>Visible</x:String>
                        <x:String>VisibleOnPointerOver</x:String>
                        <x:String>Collapsed</x:String>
                    </ComboBox>
                </StackPanel>
            </local:ControlExample.Options>
            <local:ControlExample.Xaml>
                <x:String xml:space="preserve">
&lt;PipsPager
    Orientation="$(Orientation)"
    PreviousButtonVisibility="$(PrevButton)"
    NextButtonVisibility="$(NextButton)" /&gt;
                </x:String>
            </local:ControlExample.Xaml>
            <local:ControlExample.Substitutions>
                <local:ControlExampleSubstitution x:ConnectionId='8' Key="Orientation"                                                                 />
                <local:ControlExampleSubstitution x:ConnectionId='9' Key="PrevButton"                                                                />
                <local:ControlExampleSubstitution x:ConnectionId='10' Key="NextButton"                                                                />
            </local:ControlExample.Substitutions>
        </local:ControlExample>
    </StackPanel>
</Page>

